{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ESNext", "DOM"],
    "moduleResolution": "Node",
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "references": [
    { "path": "../core/api" },
    { "path": "../core/colors" },
    { "path": "../core/settings" },
    { "path": "../core/three-utils" },
    { "path": "../core/ui" },
    { "path": "../game/board" },
    { "path": "../tools/delay" }
  ]
}
